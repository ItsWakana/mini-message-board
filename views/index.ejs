<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='./stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul class="messages">
      <% messages.forEach((message) => { %>
        <li>
          <p><b><%= message.user %></b></p>
          <p><%= message.text %></p>
          <p><i><%= message.added %></i></p>
        </li>
      <% }) %>
    </ul>
    <button class="message-btn">
      <a href="/new">Add a message</a>
    </button>
  </body>
</html>
